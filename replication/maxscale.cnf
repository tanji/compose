[maxscale]
threads=4

[MySQL Monitor]
type=monitor
# Multimaster test settings
#module=mmmon
#servers=db1,db2
module=mysqlmon
servers=db1,db2,db3
user=root
passwd=admin
monitor_interval=1000
#script=/usr/bin/replication-manager failover --multimaster --verbose --logfile=/tmp/mrm.log --user=root:admin --rpluser=root:admin --hosts=$INITIATOR,$NODELIST
events=master_down
detect_stale_master=true

[RW Split Router]
type=service
router=readwritesplit
servers=server1,server2,server3
user=root
passwd=admin
max_slave_connections=100%
enable_root_user=1

[Read Connection Router]
type=service
router=readconnroute
router_options=master
servers=server1
user=root
passwd=admin
enable_root_user=1

[Debug Interface]
type=service
router=debugcli

[CLI]
type=service
router=cli

[Read Connection Listener]
type=listener
service=Read Connection Router
protocol=MySQLClient
port=4008

[RW Split Listener]
type=listener
service=RW Split Router
protocol=MySQLClient
port=4006

[Debug Listener]
type=listener
service=Debug Interface
protocol=telnetd
port=4442

[CLI Listener]
type=listener
service=CLI
protocol=maxscaled
port=6603

[db1]
type=server
address=db1
port=3306
protocol=MySQLBackend

[db2]
type=server
address=db2
port=3306
protocol=MySQLBackend

[3]
type=server
address=db3
port=3306
protocol=MySQLBackend

